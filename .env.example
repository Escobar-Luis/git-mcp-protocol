# Git + MCP Protocol Configuration
# Copy to .env and configure for your environment

# MCP Server Configuration
MCP_PORT=3000
MCP_HOST=localhost

# Git Repository Configuration  
GIT_REPO_PATH=./
GIT_BRANCH_DEFAULT=main

# OAuth 2.0/2.1 Security Configuration (for production)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# AI Service Configuration (for AI-powered features)
AI_SERVICE_API_KEY=your_ai_service_key
AI_SERVICE_MODEL=claude-3-sonnet

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info

# Protocol Validation
MCP_SPEC_VERSION=2025-06-18
VALIDATE_PROTOCOL_COMPLIANCE=true